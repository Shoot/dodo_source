<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp">
    <RelativeLayout android:id="@+id/container" android:layout_width="120dp" android:layout_height="120dp">
        <View android:id="@+id/border" android:background="@drawable/cs_story_border_square" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.inappstory.sdk.imageloader.RoundedCornerLayout android:id="@+id/item_cv" android:background="#000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="4dp">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
                <com.inappstory.sdk.stories.ui.video.VideoPlayer android:id="@+id/video" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <View android:id="@+id/cell_gradient" android:background="@drawable/story_gradient_black" android:layout_width="match_parent" android:layout_height="match_parent" android:elevation="8dp"/>
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/hasAudio" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_margin="8dp" android:src="0x7f080316" android:layout_alignParentRight="true" android:alpha="0.6" android:elevation="9dp"/>
                <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="#000000" android:ellipsize="end" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:maxLines="4" android:layout_alignParentBottom="true" android:elevation="9dp"/>
                <androidx.appcompat.widget.AppCompatTextView android:textSize="14sp" android:textColor="#fff" android:ellipsize="end" android:id="@+id/source" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="8dp" android:text="test dasd asd as asdas as asd" android:maxLines="3" android:layout_alignParentBottom="true" android:elevation="9dp"/>
            </RelativeLayout>
        </com.inappstory.sdk.imageloader.RoundedCornerLayout>
    </RelativeLayout>
</RelativeLayout>
