<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp">
    <LinearLayout android:orientation="horizontal" android:id="@+id/outerLayout" android:padding="4dp" android:layout_width="120dp" android:layout_height="120dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginEnd="2dp">
            <com.inappstory.sdk.imageloader.RoundedCornerLayout android:id="@+id/container1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="2dp" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image1" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
            </com.inappstory.sdk.imageloader.RoundedCornerLayout>
            <com.inappstory.sdk.imageloader.RoundedCornerLayout android:id="@+id/container3" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="2dp" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image3" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
            </com.inappstory.sdk.imageloader.RoundedCornerLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:layout_marginStart="2dp">
            <com.inappstory.sdk.imageloader.RoundedCornerLayout android:id="@+id/container2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginBottom="2dp" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image2" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
            </com.inappstory.sdk.imageloader.RoundedCornerLayout>
            <com.inappstory.sdk.imageloader.RoundedCornerLayout android:id="@+id/container4" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="2dp" android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/image4" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
            </com.inappstory.sdk.imageloader.RoundedCornerLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
