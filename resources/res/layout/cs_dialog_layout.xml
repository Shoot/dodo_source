<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/close_area" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/parentContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/contentContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView android:textSize="24dp" android:gravity="center" android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="На какой ты стороне?"/>
                <FrameLayout android:id="@+id/editBorderContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <FrameLayout android:id="@+id/editContainer" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <com.inappstory.sdk.stories.ui.widgets.TextMultiInput android:id="@+id/editText" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
            <FrameLayout android:layout_gravity="center" android:id="@+id/buttonBackground" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView android:textSize="18dp" android:gravity="center" android:layout_gravity="center" android:id="@+id/buttonText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Отправить" android:singleLine="true"/>
            </FrameLayout>
        </LinearLayout>
        <FrameLayout android:id="@+id/borderContainer" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
