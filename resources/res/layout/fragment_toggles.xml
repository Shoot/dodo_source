<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:navigationIcon="@drawable/ic_arrow_start" app:navigationIconTint="@color/textIconPrimaryColor"/>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/recycler" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <View android:background="@color/strokeSecondaryColor" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:gravity="end|center_vertical" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_gravity="end" android:id="@+id/reset_toggles" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Reset" android:layout_weight="1" android:layout_marginEnd="20dp"/>
        <Button android:layout_gravity="end" android:id="@+id/restart" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Restart" android:layout_weight="1" android:layout_marginEnd="20dp"/>
        <Button android:layout_gravity="end" android:id="@+id/close" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Close" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
