<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/landing_stars"/>
    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:id="@+id/landing_text_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar android:id="@+id/landing_toolbar" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
            <Button android:textAppearance="?attr/textAppearanceHeadingH2" android:textColor="@color/textIconPrimaryAlternateColor" android:id="@+id/landing_country_button" android:padding="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableEnd="@drawable/ic_arrow_down_16dp" android:layout_marginStart="16dp" app:drawableTint="@color/textIconPrimaryAlternateColor" style="@style/LinkButton"/>
        </androidx.appcompat.widget.Toolbar>
        <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_horizontal" android:id="@+id/landing_iv" android:layout_width="80dp" android:layout_height="84dp" android:layout_marginLeft="28dp" android:layout_marginTop="28dp" android:layout_marginRight="28dp" android:layout_marginBottom="16dp" app:srcCompat="@drawable/ic_dodo_logo"/>
        <TextView android:textAppearance="?attr/textAppearanceHeadingH0" android:textColor="@color/textIconPrimaryAlternateColor" android:gravity="center" android:id="@+id/landing_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textAppearance="?attr/textAppearanceTextL" android:textColor="@color/textIconPrimaryAlternateColor" android:gravity="center" android:id="@+id/landing_subtitle" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp"/>
        <TextView android:textAppearance="?attr/textAppearanceTextL" android:textColor="@color/textIconPrimaryAlternateColor" android:gravity="center" android:id="@+id/landing_address_tv" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/landing_social_networks_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
        <TextView android:textAppearance="?attr/textAppearanceTextL" android:textColor="@color/textIconPrimaryAlternateColor" android:gravity="center" android:id="@+id/landing_social_networks_container_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp">
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/landing_first_social_network_iv" android:layout_width="32dp" android:layout_height="32dp" android:layout_marginEnd="20dp" app:srcCompat="@drawable/ic_facebook" app:tint="@color/textIconPrimaryAlternateColor"/>
            <androidx.appcompat.widget.AppCompatImageView android:id="@+id/landing_second_social_network_iv" android:layout_width="32dp" android:layout_height="32dp" app:srcCompat="@drawable/ic_instagram" app:tint="@color/textIconPrimaryAlternateColor"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:layout_gravity="bottom" android:id="@+id/landing_fragment_container" android:background="@drawable/top_rounded_corners_bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</FrameLayout>
