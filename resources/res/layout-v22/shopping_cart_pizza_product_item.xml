<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/backgroundPrimaryColor" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingHorizontal="16dp">
    <RelativeLayout android:id="@+id/shopping_product_pizza_content_sector" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.dodopizza.android.view.custom.doubleimageview.DoubleImageView android:id="@+id/shopping_product_pizza_image" android:layout_width="72dp" android:layout_height="72dp" android:layout_marginTop="16dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_centerVertical="true" android:layout_marginStart="16dp" android:layout_toEndOf="@+id/shopping_product_pizza_image" android:layout_alignParentEnd="true">
            <TextView android:id="@+id/shopping_product_pizza_title" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/ShoppingCartTitle"/>
            <TextView android:textAppearance="?attr/textAppearanceTextS" android:textColor="@color/textIconSecondaryColor" android:id="@+id/shopping_product_pizza_size_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textAppearance="?attr/textAppearanceTextS" android:textColor="@color/textIconSecondaryColor" android:id="@+id/shopping_product_pizza_toppings" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
                <TextView android:textAppearance="?attr/textAppearanceTextS" android:textColor="@color/textIconSecondaryColor" android:id="@+id/shopping_product_pizza_removed_ingredients" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="0" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/shopping_product_pizza_toppings" app:layout_goneMarginTop="4dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView android:textAppearance="?attr/textAppearanceTextS" android:textColor="@color/textIconWarningColor" android:id="@+id/shopping_product_pizza_stop" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/shopping_product_pizza_discount_sector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp">
                <androidx.appcompat.widget.AppCompatImageView android:id="@+id/shopping_product_pizza_discount_icon" android:layout_width="16dp" android:layout_height="16dp" android:layout_marginEnd="4dp" app:srcCompat="@drawable/ic_discount_16dp" app:tint="@color/textIconAccentColor"/>
                <TextView android:textAppearance="?attr/textAppearanceTextS" android:textColor="@color/textIconAccentColor" android:id="@+id/shopping_product_pizza_discount" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.dodopizza.order.feature.shoppingcart.view.CartPersonalPriceBadgeView android:id="@+id/shopping_product_pizza_personal_price_badge" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:layout_marginVertical="12dp">
        <com.google.android.flexbox.FlexboxLayout android:id="@+id/shopping_product_pizza_price_sector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/shopping_product_pizza_edit_button" android:layout_alignParentStart="true" app:flexWrap="wrap">
            <TextView android:textAppearance="?attr/textAppearanceHeadingH3" android:ellipsize="middle" android:id="@+id/shopping_product_pizza_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginEnd="8dp"/>
            <TextView android:ellipsize="middle" android:id="@+id/shopping_product_pizza_discount_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" app:layout_alignSelf="center" style="@style/ShoppingCartDiscountPrice"/>
        </com.google.android.flexbox.FlexboxLayout>
        <Button android:id="@+id/shopping_product_pizza_edit_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_change_combo_title" android:layout_centerVertical="true" android:textAllCaps="false" android:layout_marginEnd="12dp" android:layout_toStartOf="@+id/shopping_cart_counter_button_switcher" style="@style/LinkButton"/>
        <ViewSwitcher android:id="@+id/shopping_cart_counter_button_switcher" android:background="@drawable/shopping_cart_product_counter_background" android:layout_width="96dp" android:layout_height="32dp" android:layout_alignParentTop="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
                <Button android:id="@+id/shopping_cart_minus_counter_button" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cart_item_minus_counter" android:layout_weight="1" style="@style/ShoppingCartCounter"/>
                <TextView android:textColor="@color/textIconSecondaryColor" android:ellipsize="end" android:gravity="center" android:id="@+id/shopping_cart_counter_label" android:layout_width="0dp" android:layout_height="match_parent" android:maxLines="1" android:layout_weight="1" style="@style/ShoppingCartCounter"/>
                <Button android:id="@+id/shopping_cart_plus_counter_button" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cart_item_plus_counter" android:layout_weight="1" style="@style/ShoppingCartCounter"/>
            </LinearLayout>
            <Button android:id="@+id/shopping_cart_remove_button" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/remove" android:textAllCaps="false" style="@style/ShoppingCartCounter"/>
        </ViewSwitcher>
    </RelativeLayout>
</LinearLayout>
