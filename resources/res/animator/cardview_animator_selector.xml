<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set android:ordering="together">
            <objectAnimator android:interpolator="@android:interpolator/linear" android:duration="100" android:valueTo="0dp" android:valueType="floatType" android:propertyName="cardElevation"/>
            <objectAnimator android:interpolator="@android:interpolator/linear" android:duration="100" android:valueTo="0.95" android:propertyName="scaleX"/>
            <objectAnimator android:interpolator="@android:interpolator/linear" android:duration="100" android:valueTo="0.95" android:propertyName="scaleY"/>
        </set>
    </item>
    <item>
        <set android:ordering="together">
            <objectAnimator android:interpolator="@android:interpolator/linear" android:duration="100" android:valueTo="4dp" android:valueType="floatType" android:propertyName="cardElevation"/>
            <objectAnimator android:interpolator="@android:interpolator/linear" android:duration="100" android:valueTo="1" android:propertyName="scaleX"/>
            <objectAnimator android:interpolator="@android:interpolator/linear" android:duration="100" android:valueTo="1" android:propertyName="scaleY"/>
        </set>
    </item>
</selector>
