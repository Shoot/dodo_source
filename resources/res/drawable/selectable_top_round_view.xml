<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="100" android:exitFadeDuration="100">
    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="-2dp">
                <shape>
                    <solid android:color="@color/surfaceSecondaryColor"/>
                    <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
                    <stroke android:width="1dp" android:color="@color/strokeTertiaryColor"/>
                </shape>
            </item>
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/surfaceTertiaryColor"/>
                    <size android:height="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:bottom="-2dp">
                <shape>
                    <solid android:color="@color/surfacePrimaryColor"/>
                    <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
                    <stroke android:width="1dp" android:color="@color/strokeTertiaryColor"/>
                </shape>
            </item>
            <item android:gravity="bottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/surfaceTertiaryColor"/>
                    <size android:height="1dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
