<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_first="true" android:state_pressed="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/surfaceSecondaryColor"/>
                    <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_last="true" android:state_pressed="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/surfaceSecondaryColor"/>
                    <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_single="true" android:state_pressed="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/surfaceSecondaryColor"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_first="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/backgroundPrimaryColor"/>
                    <corners android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_last="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/backgroundPrimaryColor"/>
                    <corners android:bottomLeftRadius="12dp" android:bottomRightRadius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_single="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/backgroundPrimaryColor"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_pressed="true">
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/surfaceSecondaryColor"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <ripple android:color="?android:attr/colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <solid android:color="@color/backgroundPrimaryColor"/>
                </shape>
            </item>
        </ripple>
    </item>
</selector>
